<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Robot Profile</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="../public/styles.css">
  </head>
  {{#model}}
  <body class="container">
    <section class="profile">
      <div class="profile-pic">
        <img class="img-circle" src="{{avatar}}" alt="">
      </div>

      <div class="name-info">
        <h1>{{name}}</h1>
        <p id="location">{{city}} {{country}} {{job}} {{company}}
          {{^job}}{{/job}}</p>
        <p class="for-hire">{{^company}}Available for Hire{{/company}}</p>
        <p id="email">{{email}} | {{phone}}</p>
      </div>

      <div class="edu-skills">

        <ul class="list-unstyled">
          <div class="edu-section">
            {{#university}}
            <span><b>Education: </b></span>
            <span class="info-span">{{university}}</span>
            {{/university}}
          </div>

          <div class="skills-section">
            <span><b>Skills: </b></span>
            <ul class="list-unstyled">
              {{#skills}}
              <li class="skills-list">{{.}}</li>
              {{/skills}}
            </ul>
          </div>

        </ul>

      </div>


    </section>
  </body>
  {{/model}}
</html>
